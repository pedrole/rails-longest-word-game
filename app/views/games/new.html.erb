


<div class="container">
  <h1>New Game</h1>
  <div class="d-flex">
    <% @letters.each do |letter| %>
      <div class="bg-primary text-light m-2 letter-boxp p-4"><%= letter %></div>
    <% end %>
  </div>
  <form action="score" class="mt-3" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'letters', @letters %>
    <label for="word" class="form-label">What is the longest word you can find?</label>
    <div class="input-group input-group-lg mb-3 ">

      <input type="text" name="word" class="form-control" id="word" placeholder="" >
      <input type="submit" class="btn btn-outline-secondary" value="Play">
    </div>
  </form>

</div>
